.wrapper
  = render partial: 'homes/header'
  .items-container
    %h1
      テストの商品
    .items-container__content
      .items-image
        = image_tag "test3.jpeg", class: "items-image__box"
        .items-image__boxes
          = image_tag "test3.jpeg"
        .items-image__boxes
