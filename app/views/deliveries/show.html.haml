= render partial: "layouts/header"

.deliveries
  %main.deliveries__main
    %section.deliveries__inner
      %h2.deliveries__inner--title 発送元・お届け先住所入力
      = form_with model: @user_delivery, url: delivery_path, method: "put", class: "deliveries__inner--form", id: "delivery_update" do |f|
        .deliveries__inner--form-content
          .deliveries__inner--form-content-field
            = f.label :お名前
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :last_name, autocomplete: "off", placeholder: "山田", class: "inputField", required: true
            = f.text_field :first_name, autocomplete: "off", placeholder: "太郎", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :お名前カナ
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :last_name_kana, autocomplete: "off", placeholder: "ヤマダ", class: "inputField", required: true
            = f.text_field :first_name_kana, autocomplete: "off", placeholder: "タロウ", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :郵便番号
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :postal_number, autocomplete: "off", placeholder: "例) 1234567", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :都道府県
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, class: "inputField", required: true, include_blank: "----"
          .deliveries__inner--form-content-field
            = f.label :市区町村
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :city, autocomplete: "off", placeholder: "例) 横浜市緑区", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :番地
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :block, autocomplete: "off", placeholder: "例) 青山1-1-1", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :建物名
            %span.deliveries__inner--form-content-field-any 任意
            %br/
            = f.text_field :building_name, autocomplete: "off", placeholder: "例) 柳ビル103", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :電話
            %span.deliveries__inner--form-content-field-any 任意
            %br/
            = f.text_field :phone_number, autocomplete: "off", placeholder: "例) 09012345678", class: "inputField", required: true, value: @phone_number 
          = f.submit '配送先情報を変更する', class: "nextBtn", id: "delivery_change"
= hidden_field_tag :lastURL, request.referer


= render partial: "devise/shared/shared-footer"