.common
  %header.common__header
    %h1.common-image
      = link_to "/" do
        =image_tag("fmarket_logo_red.svg", size: "184x49")
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.active_red
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
.deliveries
  %main.deliveries__main
    %section.deliveries__inner
      %h2.deliveries__inner--title 発送元・お届け先住所入力
      = form_with model: @user_delivery, local: true, url: deliveries_path, class: "deliveries__inner--form" do |f|
        .deliveries__inner--form-content
          .deliveries__inner--form-content-field
            = f.label :お名前
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :last_name, autofocus: true, autocomplete: "off", placeholder: "山田", class: "inputField", required: true
            = f.text_field :first_name, autofocus: true, autocomplete: "off", placeholder: "太郎", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :お名前カナ
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :last_name_kana, autofocus: true, autocomplete: "off", placeholder: "ヤマダ", class: "inputField", required: true
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "off", placeholder: "タロウ", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :郵便番号
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :postal_number, autofocus: true, autocomplete: "off", placeholder: "例) 1234567", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :都道府県
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, class: "inputField", required: true, include_blank: "----"
          .deliveries__inner--form-content-field
            = f.label :市区町村
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :city, autofocus: true, autocomplete: "off", placeholder: "例) 横浜市緑区", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :番地
            %span.deliveries__inner--form-content-field-required 必須
            %br/
            = f.text_field :block, autofocus: true, autocomplete: "off", placeholder: "例) 青山1-1-1", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :建物名
            %span.deliveries__inner--form-content-field-any 任意
            %br/
            = f.text_field :building_name, autofocus: true, autocomplete: "off", placeholder: "例) 柳ビル103", class: "inputField", required: true
          .deliveries__inner--form-content-field
            = f.label :電話
            %span.deliveries__inner--form-content-field-any 任意
            %br/
            = f.text_field :phone_number, autofocus: true, autocomplete: "off", placeholder: "例) 09012345678", class: "inputField", required: true
          = f.submit '次へ進む', class: "nextBtn"
= render partial: "devise/shared/shared-footer"