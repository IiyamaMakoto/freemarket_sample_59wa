.wrapper
  = render partial: 'homes/header-login'
  .header-nav-bar
    %ul
      %li
        = link_to root_path do
          %span
            メルカリ 
          = icon('fas', 'chevron-right')
      %li
        = link_to mypages_path do
          %span
            マイページ
          = icon('fas', 'chevron-right')
      %li
        = link_to mypage_path do
          %span.page
            プロフィール
  %main.mypage-container
    = render partial: 'mypages/mypage-list'
    .mypage-profile
      %h2.mypage-profile__title
        プロフィール
      = form_with model: @user, url: "", method: :post, local: true do |f|
        .mypage-profile__nickname
          = icon('fas', 'user-alt')
          = f.text_field :title, class: 'mypage-profile__nickname--form'
        .mypage-profile__text 
          = f.text_area :text, class: 'mypage-profile__text--form',  placeholder: '例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪'
          = f.submit "変更する", class: 'mypage-profile__text--btn'
